<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phần mềm bói toán"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập tuổi của crush:"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/editCrush"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@color/design_default_color_primary_dark"
            android:outlineAmbientShadowColor="@color/design_default_color_primary_dark"
            android:inputType="number"
            android:textColor="@color/white"
            android:layout_marginLeft="35dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập tuổi của bạn:"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/editBan"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@color/design_default_color_primary_dark"
            android:outlineAmbientShadowColor="@color/design_default_color_primary_dark"
            android:inputType="number"
            android:textColor="@color/white"
            android:layout_marginLeft="48dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnBoiToan"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="Bói toán"/>
    <TextView
        android:id="@+id/txtNhanXet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhan xet"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="16sp"/>

</LinearLayout>