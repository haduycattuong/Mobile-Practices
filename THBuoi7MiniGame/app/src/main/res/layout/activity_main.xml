<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Player One"/>
            <TextView
                android:id="@+id/tv_score_p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_player2"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Two"/>
            <TextView
                android:id="@+id/tv_score_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="12"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_who_win"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="Player X win the match!"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_0"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:backgroundTint="#413F43"/>
        <Button
            android:id="@+id/btn_1"
            android:layout_marginLeft="5dp"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:backgroundTint="#413F43"/>
        <Button
            android:id="@+id/btn_2"
            android:layout_marginLeft="5dp"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:backgroundTint="#413F43"/>
    </LinearLayout><LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal">
    <Button
        android:id="@+id/btn_3"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:backgroundTint="#413F43"/>
    <Button
        android:id="@+id/btn_4"
        android:layout_marginLeft="5dp"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:backgroundTint="#413F43"/>
    <Button
        android:id="@+id/btn_5"
        android:layout_marginLeft="5dp"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:backgroundTint="#413F43"/>
</LinearLayout><LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal">
    <Button
        android:id="@+id/btn_6"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:backgroundTint="#413F43"/>
    <Button
        android:id="@+id/btn_7"
        android:layout_marginLeft="5dp"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:backgroundTint="#413F43"/>
    <Button
        android:id="@+id/btn_8"
        android:layout_marginLeft="5dp"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:backgroundTint="#413F43"/>
</LinearLayout>
    <Button
        android:id="@+id/btn_reset_all"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Rest The Game"
        android:textSize="24sp"/>
</LinearLayout>